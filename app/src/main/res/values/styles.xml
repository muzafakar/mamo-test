<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CurrencyText">
        <item name="android:textSize">38sp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="KeyboardButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/keyboard_key_size</item>
        <item name="android:layout_marginTop">@dimen/keyboard_key_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/blue_ribbon</item>
        <item name="backgroundTint">@color/hawkeyes_blue</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textSize">18sp</item>
        <item name="rippleColor">@color/blue_ribbon</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Circle</item>
        <item name="layout_constraintDimensionRatio">W, 1:1</item>
    </style>

    <style name="KeyboardButton.Operator" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/keyboard_key_size</item>
        <item name="android:layout_marginTop">@dimen/keyboard_key_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="rippleColor">@color/blue_ribbon</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">@color/hawkeyes_blue</item>
        <item name="iconSize">18dp</item>
        <item name="iconTint">@color/blue_ribbon</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="strokeColor">@color/hawkeyes_blue</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Circle</item>
        <item name="layout_constraintDimensionRatio">W, 1:1</item>
    </style>

</resources>